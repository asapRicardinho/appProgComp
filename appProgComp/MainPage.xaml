<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appProgComp.MainPage" Shell.NavBarIsVisible="False"
             Padding="0, -100, 0, 0"
             BackgroundColor="#FFF4E8">

    <ScrollView>
        <VerticalStackLayout
            Padding="0,0"
            Spacing="12"
            VerticalOptions="Center"
            HorizontalOptions="Center">


            <Image Source="logo2.png" HorizontalOptions="Center" WidthRequest="225"/>
            <Label Text="Orientação Vocacional para Jovens" FontSize="Title" TextColor="DarkOrange" FontAttributes="Bold" HorizontalOptions="Center"/>
           <Label Text="Recém Inseridos no Mercado de Trabalho" FontSize="Subtitle" TextColor="DarkBlue"  HorizontalOptions="Center" />
           <Button x:Name="btnAcessar" Text="Acessar" TextColor="White" Clicked="btnAcessar_Clicked" BackgroundColor="DarkBlue" HorizontalOptions="Center" Padding="70, 0" CornerRadius="20" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
